<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_ffffff_6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/color_333333"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/txt_user_service_title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/color_333333"
        android:text="@string/txt_user_service_policy"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_divider_p1"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/color_E5E5E5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_nonuse"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/color_black_100"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_666666"
            android:gravity="center"
            android:text="@string/txt_nonuse"/>

        <View
            android:layout_width="@dimen/app_divider_p1"
            android:layout_height="match_parent"
            android:background="@color/color_E5E5E5"/>

        <Button
            android:id="@+id/btn_agree"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/color_black_100"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_00A7FF"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/txt_have_read"/>
    </LinearLayout>

</LinearLayout>