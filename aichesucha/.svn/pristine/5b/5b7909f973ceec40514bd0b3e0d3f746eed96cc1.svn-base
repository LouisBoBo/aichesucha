<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tree_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="@color/color_333333"
            android:textSize="13sp" />


        <ImageView
            android:id="@+id/iv_family_add"
            android:layout_width="@dimen/dp_35"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="@dimen/dp_9"
            app:srcCompat="@drawable/icon_family_add" />

        <ImageView
            android:id="@+id/iv_family_bind"
            android:layout_width="@dimen/dp_35"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="@dimen/dp_10"
            app:srcCompat="@drawable/icon_family_bind" />

        <ImageView
            android:id="@+id/iv_family_edit"
            android:layout_width="@dimen/dp_35"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="@dimen/dp_11"
            app:srcCompat="@drawable/icon_family_edit" />

        <ImageView
            android:id="@+id/iv_family_delete"
            android:layout_width="@dimen/dp_35"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="@dimen/dp_10"
            app:srcCompat="@drawable/icon_family_delete" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:background="#eee" />
</LinearLayout>
