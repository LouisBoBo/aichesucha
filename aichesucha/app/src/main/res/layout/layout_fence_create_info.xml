<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_ffffff_10_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:layout_marginStart="@dimen/dp_12"
            android:textColor="@color/color_333333"
            android:text="@string/txt_name_two"/>

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_999999"
            android:background="@color/transparent"
            android:gravity="end|center_vertical"
            android:maxLength="30"
            android:hint="@string/txt_input_name"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_province_city"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:layout_marginStart="@dimen/dp_12"
            android:textColor="@color/color_333333"
            android:text="@string/txt_province"/>

        <TextView
            android:id="@+id/tv_province_city"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_999999"
            android:background="@color/transparent"
            android:gravity="end|center_vertical"
            android:drawableEnd="@drawable/icon_right"
            android:drawablePadding="@dimen/dp_10"
            android:hint="@string/txt_please_select_province"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:layout_marginStart="@dimen/dp_12"
            android:textColor="@color/color_333333"
            android:text="@string/txt_alarm_set"/>

        <GridView
            android:id="@+id/gridView_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="4"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:listSelector="@color/transparent"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_37"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_14"
        android:background="@drawable/bg_00a7ff_30"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/color_FFFFFF"
        android:text="@string/txt_save"/>

</LinearLayout>