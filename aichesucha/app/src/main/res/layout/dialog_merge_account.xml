<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_ffffff_10">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_30"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/color_333333"
        android:text="@string/txt_merge_account"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_E5E5E5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30">

        <EditText
            android:id="@+id/edt_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:inputType="number"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_999999"
            android:background="@color/transparent"
            android:hint="@string/txt_input_code"/>

        <TextView
            android:id="@+id/tv_send_code"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_00b4b7_12"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/color_00A7FF"
            android:gravity="center"
            android:text="@string/txt_send_code"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_E5E5E5"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_31"
        android:layout_margin="@dimen/dp_30">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/dp_90"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_666666"
            android:text="@string/txt_cancel"
            android:background="@drawable/bg_ffffff_2_3"/>

        <Button
            android:id="@+id/btn_merge"
            android:layout_width="@dimen/dp_90"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_FFFFFF"
            android:layout_alignParentEnd="true"
            android:text="@string/txt_merge"
            android:background="@drawable/bg_00b4b7_4"/>
    </RelativeLayout>

</LinearLayout>